generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:G9uYwMXAUcJi06xa29nY@containers-us-west-102.railway.app:5722/railway"
}

model product {
  id            String          @id @default(uuid())
  name          String          @unique
  created_at    DateTime        @default(now())
  buy_products  buy_products[]
  sell_products sell_products[]
}

model client {
  id              String          @id @default(uuid())
  name            String
  document_number String          @unique
  created_at      DateTime        @default(now())
  sell_products   sell_products[]
}

model provider {
  id              String         @id @default(uuid())
  name            String
  document_number String         @unique
  created_at      DateTime       @default(now())
  buy_products    buy_products[]
}

model user {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  isAdmin    Boolean  @default(false)
  created_at DateTime @default(now())
}

model buy_products {
  id          String   @id @default(uuid())
  id_product  product  @relation(fields: [product_id], references: [id])
  product_id  String
  amount      Float
  cost        Float
  id_provider provider @relation(fields: [provider_id], references: [id])
  provider_id String
  created_at  DateTime @default(now())
}

model sell_products {
  id          String   @id @default(uuid())
  id_product  product  @relation(fields: [product_id], references: [id])
  product_id  String
  amount      Float
  cost        Float
  id_provider client   @relation(fields: [client_id], references: [id])
  client_id   String
  created_at  DateTime @default(now())
}
